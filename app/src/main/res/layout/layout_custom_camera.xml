<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cambackground"
    tools:context = ".CustomCamera">

    <SurfaceView
        android:id="@+id/MyCamera"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id = "@+id/CameraIndication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ευθυγραμμίστε την αφίσα μέσα στο πλαίσιο"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/MyCamera"/>

    <Button
        android:id = "@+id/sendbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/CameraIndication"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp"
        android:text="Λήψη"
        android:background="@color/colorAccent"/>

</RelativeLayout>