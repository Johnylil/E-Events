<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EAEA"
    tools:context=".EditEvent">
    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Τίτλος εκδήλωσης"
            android:layout_below="@id/textView3"
            android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/editTextEdit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=""
            android:layout_below="@id/textView9"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Οδός/Περιοχή"
            android:layout_below="@id/editTextEdit3"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/editTextEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=""
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Περιγραφή"
            android:layout_below="@id/editTextEdit"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/categoryedit"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/timeedit"
            android:layout_toRightOf="@id/editTextEdit2"
            android:layout_marginLeft="23dp"
            android:clickable="true"
            android:ems="8"
            android:focusable="false"
            android:hint="Κατηγορία"
            android:onClick="show_popup"/>
        <EditText
            android:id="@+id/editTextEdit2"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="" />
        <EditText
            android:id="@+id/dateEdit"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextEdit2"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:ems="10"
            android:hint="Ημερομηνία εκδήλωσης"
            android:focusable="false"/>
        <EditText
            android:id="@+id/timeedit"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dateEdit"
            android:layout_below="@id/editTextEdit2"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:editable="false"
            android:ems="3"
            android:focusable="false"
            android:hint="Ώρα" />
    </RelativeLayout>
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sendbtn"
        android:text="ΑΠΟΣΤΟΛΗ" />
    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/imageViewEdit"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/add_photo"
        android:clickable="true"
        android:text="ΠΡΟΣΘΕΣΤΕ ΦΩΤΟΓΡΑΦΙΑ"
        android:textAlignment="center"
        />
</RelativeLayout>